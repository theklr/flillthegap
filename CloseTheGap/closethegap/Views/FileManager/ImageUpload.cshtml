@{
    ViewBag.Title = "ImageUpload";
}

<section class="main-container">
    <div class="container">

        <div class="main col-md-12">
            <div class="row">

                <!-- main start -->
                <!-- ================ -->

                <h1 class="text-center title">Image Upload Center</h1>
                <div class="col-md-4">
                    <img src="http://www.milescollins.com/images/barack.jpg" id="imagePreview" alt="http://www.milescollins.com/images/barack.jpg">
                </div>
                <div class="col-md-8">
                    <form id="imageUploadForm" role="form" name="image" method="post" action="api/files">
                        <div class="form-group">
                            <br />
                            <input type="file" name="picture" id="picture" class="" />
                            <br />
                        </div>
                        <h2 class="imageDetails hidden">Image Details</h2>
                        <div class="form-group hidden">
                            <label for="imageName">Image Name</label>
                            <input id="imageName" name="ImageName" class="form-control" type="text" placeholder="Give Your Image A Name">
                            <h3>More Image Options Coming Soon...</h3>
                        </div>
                        <div class="form-group hidden">
                            <input type="button" class="btn btn-default" value="Upload" id="cmdSubmitImage">
                            <input class="hidden" id="imagePath" name="ImagePath">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>


